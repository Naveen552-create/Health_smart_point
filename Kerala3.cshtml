@model WebApplication2.Models.Modelclass
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kerala</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="container">
            <div>
                <center>  <img src="~/Content/Image/logo.png" /> </center>
            </div>
            @ViewBag.msg
            <div class="container" style="padding: 50px;">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>LIVER HOSPTIAL</h3>
                        <a href="@Url.Action("UserKerala3", "Default")">Check For Update</a>
                    </div>
                    <div class="card-body">
                        <center>
                            <h5 class="card-title">DETAILS</h5>
                            <p class="card-text"> @Html.TextBoxFor(m => m.Hospitalname, new { @class = "form-control", id = "Hosptialname", @PlaceHolder = "Enter Your Hospital Name", @Style = "margin-bottom:2%;" })</p>
                            <p class="card-text"> @Html.TextBoxFor(m => m.Type, new { @class = "form-control", id = "Type", @PlaceHolder = "Enter Your Hospital GOVERNMENT/PRIVATE", @Style = "margin-bottom:2%;" })</p>
                            <p class="card-text"> @Html.TextBoxFor(m => m.Ambulance, new { @class = "form-control", id = "Ambulance", @PlaceHolder = "Enter Ambulance is there Yes/No", @Style = "margin-bottom:2%;" })</p>
                            <p class="card-text"> @Html.TextBoxFor(m => m.Beds, new { @class = "form-control", id = "Beds", @PlaceHolder = "Enter No.of Beds in your hospital ", @Style = "margin-bottom:2%;" })</p>
                            <p class="card-text"> @Html.TextBoxFor(m => m.Oxygen, new { @class = "form-control", id = "Oxygen", @PlaceHolder = "Enter Oxygen is there Yes/no ", @Style = "margin-bottom:2%;" })</p>
                            <p class="card-text"> @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", id = "PhoneNumber", @PlaceHolder = "Enter Hospital Phone Number ", @Style = "margin-bottom:2%;" })</p>
                            <p class="card-text"> @Html.TextAreaFor(m => m.Hospitaladdress, new { @class = "form-control", id = "Hospitaladdress", @PlaceHolder = "Enter Hospital Address ", @Style = "margin-bottom:2%;" })</p>
                            <button type="submit" class="btn btn-primary" id="btnSumbit" onclick=" return submit1()">Submit</button>
                        </center>
                    </div>
                    <div class="card-footer text-muted">
                        THANK YOU
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
<script>

    function submit1() {
        var Hosptialname = document.getElementById("Hosptialname").value;
        var Type = document.getElementById("Type").value;
        var Ambulance = document.getElementById("Ambulance").value;
        var Beds = document.getElementById("Beds").value;
        var Oxygen = document.getElementById("Oxygen").value;
        var PhoneNumber = document.getElementById("PhoneNumber").value;
        var Hospitaladdress = document.getElementById("Hospitaladdress").value;

        if (Hosptialname == "") {
            alert("Enter Your Hosptialname");
            document.getElementById("Hosptialname").focus();
            return false;
        }
        else if (Type == "") {
            alert("Enter Your Type");
            document.getElementById("Type").focus();
            return false;
        }
        else if (Ambulance == "") {
            alert("Enter Ambulance is there Yes/No")
            document.getElementById("Ambulance").focus();
            return false;
        }
        else if (Beds == "") {
            alert("Enter No.of Beds");
            document.getElementById("Beds").focus();
            return false;
        } else if (Oxygen == "") {
            alert("Enter yes/no about oxygen");
            document.getElementById("Oxygen").focus();
            return false;
        }
        else if (PhoneNumber == "" || PhoneNumber.length != 10) {
            alert("Enter Your phone number correctly");
            document.getElementById("PhoneNumber").focus();
            return false;
        }
        else if (Hospitaladdress == "") {
            alert("Enter Your address");
            document.getElementById("Hospitaladdress").focus();
            return false;
        }
        else {
            alert("ThankYou  For Your Submited");
        }

    }
</script>
@model WebApplication2.Models.Modelclass
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Donor</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        body {
            background-image: url('../../content/image/doc bg.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }

    </style>
</head>
<body>

    <div>
        @using (Html.BeginForm())
        {
            <center>
                <div class="container" style="padding: 80px;">
                    @ViewBag.msg
                    
                        <div class="card text-center">
                            <div class="card-header">
                                <h5>ORGAN DONOR REGISTRATION FORM</h5>
                            </div>
                            <div class="card-body">
                                <center>
                                    <form method="post" action="success">

                                        <div class="form-group col-lg-6">
                                            @Html.LabelFor(m => m.Name)
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.LabelFor(m => m.Age)
                                            @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.LabelFor(m => m.DonatingpartofOrgan)
                                            @Html.TextBoxFor(m => m.DonatingpartofOrgan, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.LabelFor(m => m.Email)
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.LabelFor(m => m.Phone)
                                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.LabelFor(m => m.Address)
                                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
                                        </div>
                                    </form>
                                </center><br />
                                <button type="submit" class="btn btn-primary" id="btnSumbit">Submit</button>
                            </div>

                        </div>
                </div>
            </center>
        }
    </div>
    </body>
</html>


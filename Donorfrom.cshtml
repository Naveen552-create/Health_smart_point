@model WebApplication2.Models.Modelclass
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Donor Form</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <style>
        body {
            background-image: url('../../content/image/hospital bg1.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>

    <div>
        @using (Html.BeginForm())
        {

            <div class="container" style="padding: 80px;">
                @ViewBag.msg
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "name", @PlaceHolder = "Enter Your Name", @Style = "margin-bottom:2%;" })
                @Html.TextBoxFor(m => m.Bloodgrouptype, new { @class = "form-control", id = "Bloodgrouptype", @PlaceHolder = "Enter Your Bloodgrouptype", @Style = "margin-bottom:2%;" })
                @Html.TextBoxFor(m => m.Location, new { @class = "form-control", id = "location", @PlaceHolder = "Enter Your Location", @Style = "margin-bottom:2%;" })
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", id = "phone", @PlaceHolder = "Enter Your Phone Number", @Style = "margin-bottom:2%;" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", @PlaceHolder = "Enter Your Email", @Style = "margin-bottom:2%;" })
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", id = "address", @PlaceHolder = "Enter Your Address", @Style = "margin-bottom:2%;" })

                <button type="submit" class="btn btn-primary" onclick="return submit1()">Submit</button>

            </div>
        }
    </div>

</body>
</html>
<script>

    function submit1() {
        var name = document.getElementById("name").value;
        var Bloodgrouptype = document.getElementById("Bloodgrouptype").value;
        var location = document.getElementById("location").value; 
        var phone = document.getElementById("phone").value;
        var address = document.getElementById("address").value;

        if (name == "") {
            alert("Enter Your Name");
            document.getElementById("name").focus();
            return false;
        }
        else if (Bloodgrouptype == "" ) {
            alert("Enter Your Blood Group Type");
            document.getElementById("Bloodgrouptype").focus();
            return false;
        }
        else if (location == "") {
            alert("Enter your location type");
            document.getElementById("location").focus();
            return false;
        }
        else if (phone == "" || phone.length!=10) {
            alert("Enter Your phone number correctly");
            document.getElementById("phone").focus();
            return false;
        }
       
        else if (address == "") {
            alert("Enter Your address");
            document.getElementById("address").focus();
            return false;

        }

        else {
            alert("ThankYou  For Your Submited");
             }

    }
</script>




